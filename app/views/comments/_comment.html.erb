<p>
  (<%= comment.votes %>) <%= comment.id %> <%= link_to comment.body, deal_comment_url(comment.deal.id, comment.id) %>
  <%= button_to "Upvote", action: :upvote, controller: "comments", deal_id: comment.deal.id, id: comment.id %>
  <%= button_to "Downvote", action: :downvote, controller: "comments", deal_id: comment.deal.id, id: comment.id %>
</p>

<ul>
  <% comments_by_parent[comment.id].each do |child_comment| %>
    <li>
      <%= render "comments/comment", comment: child_comment, comments_by_parent: comments_by_parent %>
    </li>
  <% end %>
</ul>