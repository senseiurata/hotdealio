<% if (current_user.id) { %>
  <li>Welcome, <span class="text-username"><%= Hotdealio.user.escape('username') %></span>!</li>
  <li><button class="btn btn-xs btn-white btn-sign-out">Sign Out</button></li>
<% } else { %>
  <li><button class="btn btn-xs btn-white btn-sign-up">Sign Up</button></li>
  <li><button class="btn btn-xs btn-white btn-sign-in">Sign In</button></li>
<% } %>
