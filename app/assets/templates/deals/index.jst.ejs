<h1>All Deals</h1>

<div>
  <div class="deal-rows-all">

    <% var dealCount = 0; %>
    
    <div class="deal-row-container">
      <% deals.each(function (deal, index) { %>
        <div class="col-xs-3">
          <a href="/#/deals/<%= deal.get('id') %>">
            <img src="<%= deal.escape('image_url') %>" class="deal-tile-image">
          </a>
          <span class="votes-text">
            <% if (deal.get('votes') > 0) { %>+<% } %><%= deal.get('votes') %></span>
          <a href="/#/deals/<%= deal.get('id') %>">
            <%= deal.escape('title') %>
          </a>
        </div>

        <% if (dealCount % 4 === 3) { %>

    </div>
    <div class="deal-row-container pull-right">

        <% } %>
        <% dealCount++ %>

      <% }); %>
    </div>
  </div>
  <div class="deal-recent-container">

  </div>
</div>