<div class="deal-show-container panel panel-default">
  <h1><%= deal.escape('title') %></h1>
  <img src="<%= deal.escape('image_url') %>" class="deal-image">
  <div>
    <div class="btn-group-vertical">
      <button class="btn btn-vote deal-upvote"><span class="glyphicon glyphicon-circle-arrow-up"></span></button>
      <button class="btn btn-vote deal-downvote"><span class="glyphicon glyphicon-circle-arrow-down"></span></button>
    </div>
      <span class="votes-text deal-votes">
        <% if (deal.get('votes') > 0) { %>+<% } %><%= deal.get('votes') %></span>
      <a href="<%= deal.escape('url') %>">
        <%= deal.escape('title') %>
      </a>
  </div>
  <p><%= deal.get('description') %></p>
  <p>Categories:
    <% deal.categories().each(function (category) { %>
      <%= category.escape('name') %>
    <% }); %>
  </p>
  <div>
    <% if (Hotdealio.currentUserId === deal.get('submitter_id')) { %>
      <button class="btn btn-default btn-purple btn-deal-update">Update</button>
      <button class="btn btn-default btn-purple btn-deal-delete">Delete</button>
    <% } %>
  </div>
</div>

<h3>Comments</h3>
<button class="btn btn-primary btn-open-post-comment-modal" data-toggle="modal"><span class="glyphicon glyphicon-comment"></span> &nbsp;Comment on this deal!</button>

<div class="modal fade post-deal-comment-modal" tabindex="-1" role="dialog" aria-labelledby="postCommentLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title" id="postCommentLabel">Post Comment</h4>
      </div>
      <div class="modal-body clearfix">
      
        <form class="form-horizonal col-xs-6 deal-post-comment" role="form">
          <textarea name="comment[body]" placeholder="Comment on this Deal!" class="form-control deal-comment-body"></textarea> 

          <input type="submit" class="btn btn-default">
        </form>

      </div>

    </div>
  </div>
</div>

<div>
  <ul class="comment-items"></ul>
</div>